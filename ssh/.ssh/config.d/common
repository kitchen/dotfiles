ServerAliveInterval 60

# github
# doesn't support certs, but I can manage keys through web interface
Host github
	HostName github.com
	User git

# HEY THIS ONE WORKS, YAY
Host pohara.kitchen.io
	HostName pohara.kitchen.io
	User kitchen
	Port 28123

Host pohara
	HostName 192.168.115.2
	User kitchen
	Port 22

Host wharariki
    HostName 192.168.115.138
    User kitchen
    Port 22
    # not all of my ssh clients have OpenSSH 8.2+ yet
    # my yubikeys don't support ed25519-sk, so ecdsa-sk it is for this guy!
    Match exec "test -f ~/.ssh/id_ecdsa_sk -o -f ~/.ssh/id_ed25519_sk"
    IdentityFile ~/.ssh/id_ecdsa_sk
    IdentityFile ~/.ssh/id_ed25519_sk
    IdentitiesOnly yes
    PasswordAuthentication no
